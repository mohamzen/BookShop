@using BookShop.Mvc.Models

@model Book

@{
    ViewBag.Title = $"{Model.Title}";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="page-header">@Model.Title <small>by @Model.Author</small></h1>

<dl class="dl-horizontal">
    <dt>Title</dt>
    <dd id="title">@Model.Title</dd>

    <dt>Author(s)</dt>
    <dd id="author">@Model.Author</dd>

    <dt>Price</dt>
    <dd id="price">&euro; @Model.Price.ToString("0.00")</dd>

    <dt>Quantity</dt>
    <dd id="quantity"> @Model.Quantity.ToString("0")</dd>

    <dt>Id</dt>
    <dd id="id">@Model.Id</dd>
</dl>

@Html.ActionLink("Add to cart", "Add", "ShoppingCart", new { bookId = Model.Id }, new { @class = "btn btn-primary" })
